<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash screen -->
    <style name="splash_screen" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Spinner -->
    <style name="spinner" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimens/spinner_text_size</item>
    </style>

    <!-- Switch -->
    <style name="switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/swith_clicked</item>
        <item name="colorSwitchThumbNormal">@color/switch_unclicked</item>
        <item name="android:colorForeground">@color/switch_foreground</item>
        <item name="android:textSize">@dimens/switch_text_size</item>
    </style>

</resources>
